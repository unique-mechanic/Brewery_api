<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
<body>
    <%- include("./partials/header.ejs") %>
    
    <div class="container px-4 py-5" id="featured-3">
        <h2 class="pb-2 border-bottom">Breweries by Location</h2>
        <h6 style="text-align: center;">If no inputs are given, then the places are chosen randomly</h6>
        <div >
            <form action="/location" class="w-50">
                <div class="form-row align-items-center">
                    <div class="col-sm-6 my-1">
                        <label class="sr-only" for="inlineFormInputName">Latitude</label>
                        <input type="text" class="form-control" id="inlineFormInputName" name="lat" placeholder="Enter Latitude">
                    </div>
                    <div class="col-sm-6 my-1">
                        <label class="sr-only" for="inlineFormInputGroupUsername">Longitude</label>
                        <input type="text" class="form-control" id="inlineFormInputGroupUsername" name="lon" placeholder="Enter Longitude">
                    </div>
                    <div class="col-auto my-1">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
        <% if(locals.statesCovered){ %>
            <div class="text-center my-4">
            <h5>Countries Covered: <%= countriesCovered %></h5>
            <h6>States Covered: <%= statesCovered %></h6>
            </div>
        <% } %>    
        <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
            <% locals.data.forEach(function(brewery) { %>
                <div class="feature col">
                    <h3 class="fs-2 text-body-emphasis"><%= brewery.name %></h3>
                    <p><%= brewery.name %> is a <%= brewery.brewery_type %> brewery located at <%= brewery.address_1 %>, <%= brewery.city %>, <%= brewery.state_province %>. Contact them at <%= brewery.phone %> or visit their website <a href="<%= brewery.website_url %>"><%= brewery.website_url %></a>.</p>
                </div>
            <% }); %>
        </div>
    </div>

</body>
</html>