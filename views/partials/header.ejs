<div class="container">
  <header class="border-bottom lh-1 py-3">
    <div class="row flex-nowrap justify-content-between align-items-center">
      <div class="col-4 pt-1">
        <a class="link-secondary" href="#">Subscribe</a>
      </div>
      <div class="col-4 text-center">
        <a class="blog-header-logo text-body-emphasis text-decoration-none" href="#">Brewery DB</a>
      </div>
      <div class="col-4 d-flex justify-content-end align-items-center">
        <a class="link-secondary" href="#" aria-label="Search">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="mx-3" role="img" viewBox="0 0 24 24"><title>Search</title><circle cx="10.5" cy="10.5" r="7.5"></circle><path d="M21 21l-5.2-5.2"></path></svg>
        </a>
        <a class="btn btn-sm btn-outline-secondary" href="#">Sign up</a>
      </div>
    </div>
  </header>

  <div class="nav-scroller py-1 mb-3 border-bottom">
    <nav class="nav nav-underline justify-content-between">
        <a id="listAllLink" class="nav-item nav-link link-body-emphasis" href="/">List All</a>
        <a id="byCityLink" class="nav-item nav-link link-body-emphasis" href="/city">By City</a>
        <a id="byDistanceLink" class="nav-item nav-link link-body-emphasis" href="/location">By Distance</a>
        <a id="byNameLink" class="nav-item nav-link link-body-emphasis" href="#">By Name</a>
        <a id="byStateLink" class="nav-item nav-link link-body-emphasis" href="/state">By State</a>
        <a id="byPostalLink" class="nav-item nav-link link-body-emphasis" href="#">By Postal</a>
    </nav>
</div>
</div>

<script>
  // Get the current path of the URL
  const currentPath = window.location.pathname;
  console.log(currentPath);

  // Remove "active" class from all links
  document.querySelectorAll('.nav-link').forEach(link => {
      link.classList.remove('active');
  });

  // Add "active" class to the link corresponding to the current path
  if (currentPath === '/') {
      document.getElementById('listAllLink').classList.add('active');
  } else if (currentPath == '/city' || currentPath === '/getCity') {
      document.getElementById('byCityLink').classList.add('active');
  } else if (currentPath === '/distance') {
      document.getElementById('byDistanceLink').classList.add('active');
  } else if (currentPath === '/name') {
      document.getElementById('byNameLink').classList.add('active');
  } else if (currentPath === '/state'  || currentPath === '/getState') {
      document.getElementById('byStateLink').classList.add('active');
  } else if (currentPath === '/postal') {
      document.getElementById('byPostalLink').classList.add('active');
  }
</script>
