<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs") %>
<body>
    <%- include("./partials/header.ejs") %>
    <div class="container px-4 py-5" id="featured-3">
        <div class="d-flex justify-content-center mb-4">
            <form action="/getCity" method="get" class="d-flex align-items-center">
                <select class="form-select form-select-lg mr-2" aria-label="Large select example" name="city" style="margin-right: 10px;">
                    <% if(locals.selectedCity) { %>
                        <% for (let i = 0; i < city.length; i++) { %>
                            <% if (city[i] == locals.selectedCity){ %>
                                <option selected value="<%= city[i] %>"><%= city[i] %></option>
                            <% } else { %>
                                <option value="<%= city[i]%>"><%= city[i] %></option>    
                            <% } %>
                        <% } %>
                    <% } else { %>
                        <option selected>Select a city</option>
                        <% for (let i = 0; i < city.length; i++) { %>
                            <option value="<%= city[i]%>"><%= city[i] %></option>
                        <% } %>
                    <% } %>    
                </select>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
        <div class="row g-4 py-5 row-cols-1 row-cols-lg-3">
            <% if (locals.selectedCity){ %>
                <% data.forEach(function(brewery) { %>
                    <div class="feature col">
                        <h3 class="fs-2 text-body-emphasis"><%= brewery.name %></h3>
                        <p><%= brewery.name %> is a <%= brewery.brewery_type %> brewery located at <%= brewery.address_1 %>, <%= brewery.city %>, <%= brewery.state_province %>. Please find the contact details below:</p>
                        (+1) <%= brewery.phone %>
                        <a href="<%= brewery.website_url %>"><%= brewery.website_url %></a>
                    </div>
                <% }); %>
            <% } %>   
        </div>
    </div>

</body>
</html>
